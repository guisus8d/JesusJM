---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "@fontsource/anton";
import "@fontsource/ubuntu";

// Imagenes de el apartado de proyectos
import ProyectoUNO from "../assets/proyectos/ProyectoUNO.png";
---

<Layout>
    <Header />

    <div class="ContenedorPrincipalProyectos">
        <div class="Proyectos">
            <img
                class="ImgDeProyectos"
                src={ProyectoUNO.src}
                alt="Imagen del primer proyecto de el apartado de proyectos"
            />
            <div class="ContenedorDeTextoDelproyecto">
             <p class="TituloDelProyecto"><strong>Steren</strong></p>

             <p class="DescripcionDelProyecto">Desarrollo de una réplica de un sistema de ventas a pequeña escala, 
                inspirado en la estructura y funcionalidades de la empresa
                 Steren, con el objetivo de simular procesos empresariales 
                 reales.</p>

            </div>
        </div>
    </div>

    <Footer />
</Layout>

<style>
    .ContenedorPrincipalProyectos {
        position: relative;
        width: 100%;
        background: rgb(19, 19, 19);
        padding: 40px 0px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }
    .ImgDeProyectos{
        position: relative;
        width: 100%;
        border-radius: 10px;


    }

    .Proyectos {
        position: relative;
        width: 90%;
        max-width: 500px;
        background: rgba(255, 255, 255, 0.384);
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-bottom: 100px;

    }

    .ContenedorDeTextoDelproyecto{
        position: absolute;
        width: 100%;
        padding: 30px 0px;
        background: rgb(0, 0, 0);
        bottom: 0px;     
    }
    .TituloDelProyecto{
       font-family: 'Ubuntu', sans-serif;
       color: rgba(255, 255, 255, 0.884);
       margin-left: 20px;
    }

    .DescripcionDelProyecto{
       font-family: 'Ubuntu', sans-serif;
       color: rgba(255, 255, 255, 0.884);
       width: 88%;
       font-size: 10px;
       margin-left: 20px;
    }
</style>
